{
  "name": "blog-starter",
  "private": true,
  "version": "1.0.0",
  "description": "The simple blog starter",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm turbo run dev",
    "build": "pnpm turbo run build",
    "test": "pnpm turbo run test",
    "lint": "pnpm turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "pnpm turbo check-types",
    "generate": "turbo run generate --filter=@blog-starter/db",
    "migrate": "turbo run migrate --filter=@blog-starter/db",
    "reset": "pnpm --filter @blog-starter/db run reset",
    "push": "turbo run push --filter @blog-starter/db",
    "seed": "turbo run seed --filter @blog-starter/db",
    "studio": "turbo run studio --filter @blog-starter/db",
    "migrate:test": "turbo run migrate:test --filter=@blog-starter/db",
    "migrate:prod": "turbo run migrate:prod --filter=@blog-starter/db",
    "reset:prod": "pnpm --filter @blog-starter/db run reset:prod",
    "reset:test": "pnpm --filter @blog-starter/db run reset:test",
    "push:prod": "turbo run push:prod --filter @blog-starter/db",
    "push:test": "turbo run push:test --filter @blog-starter/db",
    "seed:test": "turbo run seed:test --filter @blog-starter/db",
    "seed:prod": "turbo run seed:prod --filter @blog-starter/db",
    "test:unit": "turbo run test:unit --filter web",
    "test:integration": "turbo run test:integration --filter web",
    "test:e2e": "turbo run test:e2e --filter web"
  },
  "keywords": [
    "blog",
    "starter",
    "nextjs",
    "tailwind",
    "prisma",
    "postgres"
  ],
  "author": "Arthur Prydatko",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "tsx packages/database/src/seed.ts"
  },
  "devDependencies": {
    "prettier": "^3.7.3",
    "prisma": "^7.0.1",
    "tsx": "^4.21.0",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^7.0.1"
  }
}