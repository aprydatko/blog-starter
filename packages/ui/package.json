{
  "name": "@blog-starter/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/src/index.css",
    "./*": "./dist/src/*.js"
  },
  "license": "MIT",
  "scripts": {
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/src/index.css",
    "build:components": "tsc",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@blog-starter/eslint-config": "workspace:*",
    "@blog-starter/tailwind-config": "workspace:*",
    "@blog-starter/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.17",
    "@types/react": "^19.2.7",
    "eslint": "^9.39.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.556.0",
    "tailwind-merge": "^3.4.0"
  }
}